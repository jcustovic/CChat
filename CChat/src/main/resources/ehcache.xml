<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
	updateCheck="false">

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
        maxElementsInMemory="10000"
        eternal="false"
        timeToLiveSeconds="240"
        timeToIdleSeconds="120"
        overflowToDisk="true"
        diskPersistent="false"
        diskExpiryThreadIntervalSeconds="240"
        memoryStoreEvictionPolicy="LRU"
    />
    
    <cache name="hr.chus.cchat.model.db.jpa.Role"
        maxElementsInMemory="3"
		eternal="false"
		timeToLiveSeconds="3600"
        timeToIdleSeconds="3000"
        overflowToDisk="true"
        diskPersistent="false"
        diskExpiryThreadIntervalSeconds="3600"
        memoryStoreEvictionPolicy="LRU"
    />
    
    <cache name="hr.chus.cchat.model.db.jpa.ServiceProvider"
        maxElementsInMemory="20"
		eternal="false"
		timeToLiveSeconds="3600"
        timeToIdleSeconds="3000"
        overflowToDisk="true"
        diskPersistent="false"
        diskExpiryThreadIntervalSeconds="3600"
        memoryStoreEvictionPolicy="LRU"
    />
    
    <cache name="hr.chus.cchat.model.db.jpa.ServiceProvider.serviceProviderKeywords"
		maxElementsInMemory="50"
		eternal="false"
		timeToLiveSeconds="300"
		timeToIdleSeconds="180"
		overflowToDisk="true"
	/>
    
    <cache name="hr.chus.cchat.model.db.jpa.ServiceProviderKeyword"
        maxElementsInMemory="200"
		eternal="false"
		timeToLiveSeconds="300"
        timeToIdleSeconds="180"
        overflowToDisk="true"
        diskPersistent="false"
        diskExpiryThreadIntervalSeconds="600"
        memoryStoreEvictionPolicy="LRU"
    />
    
    <cache name="hr.chus.cchat.model.db.jpa.Configuration"
        maxElementsInMemory="20"
        eternal="false"
        timeToLiveSeconds="240"
        timeToIdleSeconds="180"
        overflowToDisk="true"
        diskPersistent="false"
        diskExpiryThreadIntervalSeconds="240"
        memoryStoreEvictionPolicy="LRU"
    />
    
    <cache name="hr.chus.cchat.model.db.jpa.Nick"
        maxElementsInMemory="1000"
        eternal="false"
        timeToLiveSeconds="240"
        timeToIdleSeconds="180"
        overflowToDisk="true"
        diskPersistent="false"
        diskExpiryThreadIntervalSeconds="240"
        memoryStoreEvictionPolicy="LRU"
    />
    
    <cache name="hr.chus.cchat.model.db.jpa.Operator"
        maxElementsInMemory="100"
        eternal="false"
		timeToLiveSeconds="240"
        timeToIdleSeconds="180"
        overflowToDisk="true"
        diskPersistent="false"
        diskExpiryThreadIntervalSeconds="240"
        memoryStoreEvictionPolicy="LRU"
    />

</ehcache>
